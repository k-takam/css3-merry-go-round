{
  "name": "css3-merry-go-round",
  "version": "0.1.0",
  "description": "css3 animation example",
  "scripts": {
    "watch": "npm run watch-jade & npm run watch-sass & npm run server",
    "watch-jade": "jade --watch src/ --out dist/",
    "watch-sass": "sass --watch src/sass:dist/css --style compressed --sourcemap=none",
    "server": "browser-sync start --server --files ./*.html",
    "deploy": "git subtree push --prefix dist/ origin gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/k-takam/css3-merry-go-round"
  },
  "author": "k-takam",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.7.1",
    "jade": "^1.9.2",
    "sass": "^0.5.0"
  }
}
